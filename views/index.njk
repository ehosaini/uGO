<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="/static/css/bootstrap.min.css">
    <link rel="stylesheet" href="/static/css/style.css">
  </head>
  <body>


    <div class="contents">

      <section class="map-section">
        <div class="container bg-secondary map-container">
          <div class="row map">
            <div class="col-12 ">
              <div class="">

                <form class="" action="#" method="post">
                  <select class="" name="">
                    <option>Select Destination Country</option>
                    <option>--------------------------</option>
                    {% for country in countries %}
                      <option value={{country.Alpha2Code}}>{{ country.Name }}</option>
                    {% endfor %}
                  </select>

                  <button type="submit" class="btn-sm btn-default" name="button">GO!</button>
                </form>

              </div>


            </div>
          </div>
        </div>
      </section>

      <section class="info-section">
        <div class="container info-container">
          <div class="row info-row">

            <div class="col-3">
              <div class="row d-flex flex-column">
                <div class="exchange-rate">
                  <h6>Exchange rate</h6>
                  <p class="">$ 100.00 = <span id="exchange-rate"></span></p>
                </div>
                <div class="entry-exit">
                  <h6>Entry & Exit Requirements</h6>
                  <div id="entry-exit"></div>
                </div>
              </div>
            </div>

            <div class="col-4 bg-warning">
              <div class="embassy-consulate-info">
                <h6>US Embassy and Consulate</h6>
                <div id="embassy-consulate-info"></div>
              </div>
            </div>

            <div class="col-5 bg-primary">
              <div class="security-info">
                <h6>Safety and Security</h6>
                <div id="security-info"></div>
              </div>
            </div>

          </div>
        </div>
      </section>

    </div>

    <script type="text/javascript" src="/static/lib/jquery-3.3.1.min.js"></script>
    <script src="/static/lib/nunjucks.js"></script>
    <script type="text/javascript" src="/static/scripts/index.js"></script>
    <!-- // only in deve env: refresh browser on server restart -->
    {% if (env === 'development') %}
      <script src="/reload/reload.js"></script>
    {% endif %}
  </body>
</html>
